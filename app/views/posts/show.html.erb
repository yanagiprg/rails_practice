<div class="post_info">
  <p>
    <strong>タイトル：</strong>
    <%= @post.title %>
  </p>

  <p>
    <strong>内容：</strong>
    <%= simple_format @post.text %>
  </p>
</div>

<h2>コメント</h2>
<%= render @post.comments %>

<h2>コメントを追加</h2>
<%= render "comments/form" %>

<%= link_to '戻る', posts_path %>
| <%= link_to '編集', edit_post_path(@post) %>
